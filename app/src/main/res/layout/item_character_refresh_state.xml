<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/common_offline_try_again"
        android:textAlignment="center"
        android:paddingStart="@dimen/margin_top_medium"
        android:paddingEnd="@dimen/margin_top_medium"
        android:paddingTop="@dimen/margin_top_large"
        android:paddingBottom="@dimen/margin_top_large"
        android:background="@color/medium_grey"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_body" />

    <ProgressBar
        android:id="@+id/progress_loading_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>
